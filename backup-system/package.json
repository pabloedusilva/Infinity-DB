{
  "name": "naregua-backup-system",
  "version": "1.0.0",
  "description": "Sistema de backup automático para NaRégua BarberApp",
  "main": "smart-db.js",
  "scripts": {
    "start": "node standalone.js",
    "test": "node test.js",
    "init": "node initialize.js",
    "status": "node -e \"require('./scheduler').getSystemReport().then(console.log)\"",
    "backup": "node -e \"require('./scheduler').forceBackup()\"",
    "switch": "node -e \"require('./scheduler').forceDatabaseSwitch()\""
  },
  "keywords": [
    "backup",
    "database",
    "neon",
    "postgresql",
    "automatic"
  ],
  "author": "Pablo Eduardo Silva",
  "license": "ISC",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "node-cron": "^4.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
